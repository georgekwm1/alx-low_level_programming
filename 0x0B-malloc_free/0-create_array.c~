#include "main.h"
#include <stdio.h>
#include <stdlib.h>

/**
 * simple_print_buffer - prints buffer in hexa
 * @buffer: the address of memory to print
 * @size: the size of the memory to print
 *
 * Return: Nothing.
 */
char *create_array(unsigned int size, char c)
{
char *array = malloc(size * sizeof(char));
unsigned int i = 0;

while(i < size)
{
array[i] = c;
i++;
free(array);
}
return (char *)(array + i);
if (size == 0)
{
return (NULL);
}
else
return (NULL);    
}
